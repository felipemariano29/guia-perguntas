<%- include ("partials/header.ejs") %>
<body>
  <%- include ("partials/navbar.ejs") %>
  <div class="container">
    <h1 class="mt-4"><%- pergunta.titulo %></h1>

    <p><%- pergunta.descricao %></p>

    <hr />

    <form method="POST" action="/responder">
      <label for="corpo" class="mt-3">Resposta:</label>
      <textarea
        name="corpo"
        id="corpo"
        placeholder="Digite sua resposta"
        class="form-control"
      ></textarea>

      <input type="hidden" name="perguntaId" value="<%- pergunta.id %>" />

      <button class="btn btn-primary mt-3">Responder</button>
    </form>

    <hr />

    <h3>Respostas:</h3>

    <% respostas.forEach((resposta) => { %>

    <div class="card mt-3">
      <div class="card-body">
        <p><%- resposta.corpo %></p>
      </div>
    </div>

    <% }) %>
  </div>
</body>
<%- include ("partials/footer.ejs") %>
