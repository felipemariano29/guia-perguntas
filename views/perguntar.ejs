<%- include ("partials/header.ejs") %>
<body>
  <%- include ("partials/navbar.ejs") %>

  <div class="container">
    <div class="card mt-5">
      <div class="card-header">
        <h3>Realizar pergunta</h3>
      </div>

      <div class="card-body">
        <form>
          <label for="titulo" class="mt-3">Título</label>
          <input
            type="text"
            name="titulo"
            id="titulo"
            placeholder="Título"
            class="form-control"
          />

          <label for="descricao" class="mt-3">Descricão</label>
          <textarea
            name="descricao"
            id="descricao"
            placeholder="Descreva sua pergunta aqui"
            class="form-control"
          ></textarea>

          <button class="btn btn-primary mt-3" type="submit">Perguntar</button>
        </form>
      </div>
    </div>
  </div>
</body>
